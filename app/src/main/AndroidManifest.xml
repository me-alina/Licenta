<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alinaignea.licenta">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:name=".helper.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        >
        <activity
            android:name=".login_register.LoginActivity"
            android:label="@string/app_name">
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login_register.RegisterActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />
        <activity
            android:name=".menu_profile.ViewProfileActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />
        <activity
            android:name=".menu_profile.EditProfileActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

        <activity
            android:name=".trips.AddActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

        <activity
            android:name=".trips.ShowActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

        <activity
            android:name=".trips.SearchActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

        <activity
            android:name=".trips.ShowSearchActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

        <activity
            android:name=".menu_profile.ViewOtherProfileActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />


        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>
